{
  "manifest_version": 2,

  "name": "Hide 'Like' Notifications",
  "description": "This extension hides 'like' notifications on Facebook.",
  "version": "1.15.0",

  "icons": {
    "48": "icon_on_48.png",
    "128": "icon_128.png"
  },

  "page_action": {
    "default_title": "Hide 'Like' Notifs",
    "default_icon": "icon_on_48.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "css": ["fb_hide_like_notifs_injection.css"],
      "js": ["fb_hide_like_notifs_injection.js"]
    }
  ],

  "permissions": [
    "https://www.facebook.com/*"
  ]
}
